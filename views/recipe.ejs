<h1>Recipe</h1>
<ul class="road">
  <li><a href="/">Home/</a></li>
  <li><%=recipe.name%></li>
</ul>

<div class="recipe__page">
  <div class="recipe__img">
    <img src="<%= recipe.image%>" alt="<%= recipe.name%>" />
  </div>
  <div>
    <div class="recipe__descrip">
      <div><h2 style="margin-bottom: 5px"><%= recipe.name %></h2></div>
      <div class="recipe-bottom">
        <i class="bi bi-tag"></i><%= recipe.category%>
      </div>
      <div class="recipe-bottom">
        <h3 class="recipe-bottom">Cooking Instructions</h3>
        <p class="text"><%= recipe.description%></p>
      </div>
    </div>
    <div>
      <div>
        <h4 class="recipe-bottom">Ingredients</h4>
        <ul class="recipe-bottom">
          <%recipe.ingredients.forEach((val)=>{ %>
          <li><%=val%></li>
          <% })%>
        </ul>
      </div>
    </div>
  </div>
</div>
